{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": "Domestic Overnight Trips in Australia (Trips per sq km, 2024)",
  "projection": {
    "type": "conicConformal",
    "parallels": [-18, -36],
    "rotate": [-135, 0]
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/MinyeeWong/Assignment2/refs/heads/main/js/output.json",
        "format": {"type": "topojson", "feature": "STE_2021_AUST_GDA2020"}
      },
      "transform": [
        {
          "lookup": "properties.STE_NAME21",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/MinyeeWong/Assignment2/refs/heads/main/data/tourism_trips_2024_by_state.csv"
            },
            "key": "state",
            "fields": ["trips_2024_total"]
          }
        },
        {
          "calculate": "datum.trips_2024_total / datum.properties.AREASQKM21",
          "as": "trips_density"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 0.5},
      "encoding": {
        "color": {
          "field": "trips_density",
          "type": "quantitative",
          "title": "Trips per sq km (2024)"
        },
        "tooltip": [
          {"field": "properties.STE_NAME21", "type": "nominal", "title": "State"},
          {"field": "trips_2024_total", "type": "quantitative", "title": "Total Trips"},
          {"field": "trips_density", "type": "quantitative", "title": "Trips per sq km", "format": ".2f"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/MinyeeWong/Assignment2/refs/heads/main/js/output.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_10"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgrey"}
    }
  ]
}
